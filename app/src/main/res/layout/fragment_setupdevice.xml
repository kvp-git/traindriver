<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <TextView
        android:id="@+id/setupDeviceTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setupDeviceAddressText" />

    <Spinner
        android:id="@+id/setupDeviceTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/setupDeviceTypeLabel" />

    <TextView
        android:id="@+id/setupDeviceChannelsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channels:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/setupDeviceTypeSpinner"
        app:layout_constraintBottom_toTopOf="@id/setupDeviceAddressText" />

    <Spinner
        android:id="@+id/setupDeviceChannelsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/setupDeviceChannelsLabel" />

    <TextView
        android:id="@+id/setupDeviceAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        app:layout_constraintTop_toBottomOf="@id/setupDeviceTypeSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/setupDeviceAddressText"/>

    <EditText
        android:id="@+id/setupDeviceAddressText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="11:22:33:44:55"
        app:layout_constraintTop_toBottomOf="@id/setupDeviceTypeSpinner"
        app:layout_constraintLeft_toRightOf="@id/setupDeviceAddressLabel"
        app:layout_constraintRight_toLeftOf="@id/setupDeviceDeleteButton"/>

    <Button
        android:id="@+id/setupDeviceSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toBottomOf="@id/setupDeviceTypeSpinner"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/setupDeviceNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintTop_toBottomOf="@id/setupDeviceAddressText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/setupDeviceNameText"/>

    <EditText
        android:id="@+id/setupDeviceNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="my device"
        app:layout_constraintTop_toBottomOf="@id/setupDeviceAddressText"
        app:layout_constraintLeft_toRightOf="@id/setupDeviceAddressLabel"
        app:layout_constraintRight_toLeftOf="@id/setupDeviceDeleteButton"/>

    <Button
        android:id="@+id/setupDeviceDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        app:layout_constraintTop_toBottomOf="@id/setupDeviceAddressText"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
